@model test_store.Models.Store

@{
    ViewData["Title"] = "Add";
}

<h1>Add Store</h1>


<form method="post" action="Add">
    <div class="form-group">
        <label for="exampleInputShortname">Store shortname</label>
        <input class="form-control" id="exampleInputShortname" placeholder="Enter Shortname" asp-for="Shortname">
    </div>
    <div class="form-group">
        <label for="exampleInputFullname">Fullname</label>
        <input class="form-control" id="exampleInputFullname" placeholder="Enter Fullname" asp-for="Fullname">
    </div>
    <div class="form-group">
        <label for="exampleInputIdPerson">IdPerson</label>
        <input class="form-control" id="exampleInputIdPerson" placeholder="Enter IdPerson" asp-for="IdPerson">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>
