@model test_store.Models.Person

@{
    ViewData["Title"] = "Add";
}

<h1>Add Person</h1>


<form method="post" action="Add">
    <div class="form-group">
        <label for="exampleInputShortname">Store shortname</label>
        <input class="form-control" id="exampleInputName" placeholder="Enter Name" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="exampleInputFullname">Fullname</label>
        <input class="form-control" id="exampleInputBirth" placeholder="Enter Birth" asp-for="Birth">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
