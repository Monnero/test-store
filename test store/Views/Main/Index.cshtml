@model mainModel
@using GridMvc.Html
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>


<html>

<body>

    <div class="container">
        <div class="row">
            <ul>
                <li>
                    <a class="nav-link" asp-controller="Stores" asp-action="Add">Add Store</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Stores" asp-action="Delete">Delete Store</a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Stores" asp-action="Update">Update Store</a>
                </li>

            </ul>

            <div class="col-5">
                <p>Stores</p>
                <table class="Grid" id="MainGrid">
                    <tr>
                        <td>
                            ID
                        </td>
                        <td>
                            Shortname
                        </td>
                        <td>
                            FullName
                        </td>
                        <td>
                            Person ID
                        </td>
                    </tr>
                    @foreach (Store store in Model.Store)
                    {
                        <tr>
                            <td>
                                @store.Id

                            </td>
                            <td>
                                @store.Shortname
                            </td>
                            <td>
                                @store.Fullname
                            </td>
                            <td>
                                @store.IdPerson
                            </td>

                            <td>
                                <a asp-action="Index"
                                   asp-route-personId="@(store.IdPerson)">
                                    Show Person
                                </a>
                            </td>
                        </tr>

                    }






                </table>
            </div>

            <div class="col-3" id="Details">
                <p>Employees</p>
                <table>
                    <tr>
                    </tr>
                    @if (Model.Person != null)
                        @foreach (Person person in Model.Person)
                        {
                            <tr>
                                <td>Id</td>
                                <td>Name</td>
                                <td>Birth</td>
                            </tr>
                            <tr>
                                <td>
                                    @person.Id
                                </td>
                                <td>
                                    @person.Name
                                </td>
                                <td>
                                    @person.Birth.ToString("dd/mm/yyyy")
                                </td>
                            </tr>
                        }
                </table>

            </div>

