@model Store
@{
    ViewData["Title"] = "Create Store";
}

<form action="CreateStore" method="get">
    <div class="mb-3">
        <label class="col-form-label">Id</label>
        <input type="text" class=" form-control " asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Shortname</label>
        <input type="text" class=" form-control " asp-for="Shortname" />
        <span asp-validation-for="Shortname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Fullname</label>
        <input type="text" class=" form-control " asp-for="Fullname" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Id</label>
        <input type="text" class=" form-control " asp-for="IdPerson" />
        <span asp-validation-for="IdPerson" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    <</div>>
</form>